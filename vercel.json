{
  "version": 2,
  "name": "agrifinsight",
  "buildCommand": "cd frontend/web && npm install && npm run build",
  "outputDirectory": "frontend/web/dist",
  "builds": [
    {
      "src": "backend/app/main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/app/main.py"
    },
    {
      "src": "/docs",
      "dest": "backend/app/main.py"
    },
    {
      "src": "/redoc",
      "dest": "backend/app/main.py"
    },
    {
      "src": "/openapi.json",
      "dest": "backend/app/main.py"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "PYTHONPATH": "backend"
  },
  "build": {
    "env": {
      "PYTHONPATH": "backend"
    }
  }
}
